<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:audio="using:AvpMediaPlayer.Media.Audio"
			 xmlns:convert="using:AvpMediaPlayer.UI.Converters"
             mc:Ignorable="d" d:DesignWidth="280" d:DesignHeight="82"
             x:Class="AvpMediaPlayer.UI.Controls.SpectrumControl"
	         x:DataType="audio:AudioVisualData"
			 Height="80"
			 Width="280">
	
	<Design.DataContext>
		<audio:AudioVisualData />
	</Design.DataContext>
	
		<UserControl.Styles>
		<Style Selector="Rectangle.level">
			<Setter Property="Fill">
				<LinearGradientBrush StartPoint="100%, 50%" 
									 EndPoint="50%, 0%">
					<GradientStops>
						<GradientStop Color="DarkGreen" Offset="0"/>
						<GradientStop Color="Green" Offset="0.2"/>
						<GradientStop Color="LimeGreen" Offset="0.4"/>
						<GradientStop Color="Lime" Offset="0.6"/>
						<GradientStop Color="GreenYellow" Offset="0.8"/>
					</GradientStops>
				</LinearGradientBrush>
			</Setter>
		</Style>
	</UserControl.Styles>
	<Panel>
		<Grid ColumnDefinitions="240, 40"
			  Margin="2">
			<Panel Name="container"
				   VerticalAlignment="Stretch"
				   HorizontalAlignment="Stretch"
				   Margin="2"/>
			<StackPanel Grid.Column="1"
						Orientation="Horizontal"
						Spacing="4"
						Background="Transparent"
						VerticalAlignment="Bottom">
				<Rectangle Classes="level"
						   Width="18"
						   Height="{Binding Levels[0]}"/>
				<Rectangle Classes="level"
						   Width="18"
						   Height="{Binding Levels[1]}"/>
			</StackPanel>
		</Grid>
	</Panel>
</UserControl>
