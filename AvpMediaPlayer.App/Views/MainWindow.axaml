<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvpMediaPlayer.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:controls="using:AvpMediaPlayer.UI.Controls"
        mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="80"
        x:Class="AvpMediaPlayer.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvpMediaPlayer.App"
		Background="Transparent"
		BorderThickness="0"
		BorderBrush="Transparent"
		TransparencyLevelHint="Transparent"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaTitleBarHeightHint="-1"
		ExtendClientAreaChromeHints="NoChrome"
		WindowState="Normal"
		WindowStartupLocation="CenterScreen"
		Width="640"
		Height="80"
		CanResize="False">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Panel Name="panel">
		<Grid RowDefinitions="30, 40">
			<Border Grid.Row="0"
					BorderBrush="Coral"
					BorderThickness="2,2,2,0"
					CornerRadius="6,6,0,0"
					Opacity="0.5">
				
			</Border>
			<Border Grid.Row="1"
					BorderBrush="Coral"
					BorderThickness="2,0,2,2"
					CornerRadius="0,0,6,6"
					Opacity="0.5">
					<Grid RowDefinitions="1, *">
						<Line Grid.Row="0"
							  Opacity="0.5" 
							  Stroke="Wheat"
							  StartPoint="4,0"
							  Height="1"
							  EndPoint="632, 0"
							  VerticalAlignment="Top"/>
						<controls:RibbonControl Grid.Row="1"
												DataContext="{Binding Navigation.Ribbon}"/>
					</Grid>
				</Border>
			<!--<Border Grid.Row="1"
					BorderBrush="Black"
					BorderThickness="1"
					CornerRadius="10"
					Opacity="0.5"
					Margin="2,0">
				<PathIcon Data="{StaticResource music_regular_2}"
						  Width="80"
						  Height="80"
						  Opacity="0.2"/>
				<Border.Background>
					<LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
						<GradientStops>
							<GradientStop Color="Black" Offset="0"/>
							<GradientStop Color="Transparent" Offset="1"/>
						</GradientStops>
					</LinearGradientBrush>
				</Border.Background>
			</Border>-->
		</Grid>
	</Panel>
</Window>
