<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvpMediaPlayer.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="440"
        x:Class="AvpMediaPlayer.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvpMediaPlayer.App"
		Background="Transparent"
		BorderThickness="0"
		BorderBrush="Transparent"
		TransparencyLevelHint="AcrylicBlur"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaTitleBarHeightHint="-1"
		ExtendClientAreaChromeHints="NoChrome"
		WindowState="Normal"
		WindowStartupLocation="CenterScreen"
		Width="640"
		Height="480">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Panel>
		<PathIcon Data="{StaticResource music_regular_2}"
				  Width="80"
				  Height="80"
				  Opacity="0.2"/>
		<Grid RowDefinitions="50, *">
			<Border Grid.Row="0"
					BorderBrush="Coral"
					BorderThickness="2"
					CornerRadius="8"
					Margin="5">

			</Border>
			<Border Grid.Row="1"
					BorderBrush="Black"
					BorderThickness="1"
					CornerRadius="8"
					Opacity="0.5"
					Margin="2,0">
				<Border.Background>
					<LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
						<GradientStops>
							<GradientStop Color="Black" Offset="0"/>
							<GradientStop Color="Transparent" Offset="1"/>
						</GradientStops>
					</LinearGradientBrush>
				</Border.Background>
			</Border>
		</Grid>
	</Panel>
</Window>
